{{#if App.currentUser.isTeacher}}
  {{#unless newFormDisplayed}}
    <div class="action-buttons">
      <button class="btn btn-orange" {{action "showNewForm"}}>
        <i class="btn-add"></i>
        {{t 'forms.communications.new'}}
      </button>
    </div>
  {{/unless}}

  {{#if newFormDisplayed}}
    <div class="form-wrapper communication">
      <div class="form-fields">
        <div class="field-group">
          <label class="label">Data:</label>
          <div class="input-wrapper">
            {{input value=date class="input-date"}}
          </div>
        </div>
        <div class="field-group">
          <label class="label">Alumnes:</label>
          <div class="input-wrapper">
            {{input value=children}}
          </div>
        </div>
        <div class="field-group">
          <label class="label">Títol:</label>
          <div class="input-wrapper">
            {{input type="text" value=title}}
          </div>
        </div>
        <div class="field-group">
          <label class="label">Text:</label>
          <div class="input-wrapper">
            {{textarea value=body}}
          </div>
        </div>
      </div>
      <div class="bottom-bar">
        <button class="btn btn-orange" {{action "saveCommunication"}}>
          <i class="btn-add"></i>
          Afegir
        </button>
        <button class="btn btn-gray" {{action "hideNewForm"}}>Cancel·lar</button>
      </div>
    </div>
  {{/if}}
