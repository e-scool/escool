<div class="userbox">
  <div class="btn-group select-child">
    <a class="btn btn-success" href="#"><%= current_user.current_classroom.name %></a>
    <a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
    <ul class="dropdown-menu">
      <% if current_user.classrooms.count > 1 %>
        <% current_user.classrooms.by_name.each do |c| %>
          <% unless c.id == current_user.current_classroom_id %>
            <li><a href="/update-classroom/<%= c.id %>"><i class="icon-user"></i> <%= c.name %></a></li>
          <% end %>
        <% end %>
        <li class="divider"></li>
      <% end %>
      <li><a href="<%= edit_user_registration_path %>"><i class="icon-edit"></i> <%= t "devise.links.edit_profile" %></a></li>
      <li><a href="<%= destroy_user_session_path %>" data-method="delete"><i class="icon-off"></i> <%= t "devise.links.logout" %></a></li>
    </ul>
  </div>
  <div class="clearfix"></div>
</div>