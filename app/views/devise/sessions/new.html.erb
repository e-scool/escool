<h2><%= t("login") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, :input_html => {:class => "input-block-level"}, :required => false, :autofocus => true %>
    <%= f.input :password, :input_html => {:class => "input-block-level"}, :required => false %>
    <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= f.label :remember_me, :class => 'remember_me' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
