<%= simple_form_for @support_message, url: contact_path, :html => { id: 'contact-form', multipart: true, remote: true } do |form| %>
    <div class="form-group">
      <label for="name"><%= t("website.labels.name") %>:</label>
      <%= form.text_field :name, :id => "name" %>
      <div class="clear"></div>
    </div>
    <div class="form-group">
      <label for="email"><%= t("website.labels.email") %>:</label>
      <%= form.text_field :email, :id => "email" %>
      <div class="clear"></div>
    </div>
    <div class="form-group">
      <label for="message"><%= t("website.labels.message") %>:</label>
      <%= form.text_area :message, :id => "message", :rows => "6" %>
      <div class="clear"></div>
    </div>
    <div class="form-group">
      <%= form.submit t("website.labels.send") %>
      <div class="clear"></div>
    </div>
<% end %>